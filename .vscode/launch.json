{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/../server.js",
            "console": "integratedTerminal",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug React App",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ]
        }
    ]
}
